             x:Class="Sequencer.MainPage">

    <ContentPage.MenuBarItems>
        <MenuBarItem
            Text="File"
            >
            <MenuFlyoutItem
                Text="Save"
                />
            <MenuFlyoutItem
                Text="Load"
                />
        </MenuBarItem>
    </ContentPage.MenuBarItems>

    <ContentView>
