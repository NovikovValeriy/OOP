<Window x:Class="WPFSequencer.TrackAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSequencer"
        mc:Ignorable="d"
         Title="Add track" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0">Instrument:</TextBlock>
        <ComboBox Name="instrumentList" Grid.Row="1" MinWidth="250"></ComboBox>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="button" IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="0,0,10,0"></Button>
        </WrapPanel>

    </Grid>
</Window>
